{
  "name": "lazytranslator",
  "description": "translate & lookup dictionary easily of selected texts",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "LazyTranslator"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
          "<all_urls>"
      ],
      "js": [
          "content_script.js"
      ],
      "css": [
          "content_script.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  }
}
